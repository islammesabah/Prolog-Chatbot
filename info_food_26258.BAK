helper88(_,[],[],[]).
helper88(Q,[Q|O],[S|F],[S|J]):-
                               helper88(Q,O,F,J).
helper88(Q,[Z|O],[_|F],J):-
                               Q \= Z,
                               helper88(Q,O,F,J).
                               
                               
